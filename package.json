{
  "name": "@jasmith79/promiseplus",
  "version": "0.0.3",
  "description": "Promises with cancellation, timeout, lazy initialization.",
  "main": "dist/index.js",
  "module": "dist/promiseplus.js",
  "jsnext:main": "dist/promiseplus.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jasmith79/promiseplus.git"
  },
  "keywords": [
    "Promise"
  ],
  "author": "jasmith79",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jasmith79/promiseplus/issues"
  },
  "homepage": "https://github.com/jasmith79/promiseplus#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jasmine": "^3.3.12",
    "babel-loader": "^8.0.5",
    "babel-plugin-transform-es2015-modules-umd": "^6.24.1",
    "jasmine": "^3.2.0",
    "jasmine-core": "^3.3.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.1"
  },
  "scripts": {
    "test": "ts-node node_modules/jasmine/bin/jasmine",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:ts && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src/promiseplus.ts -o dist/index.js --extensions \".ts,.tsx\" --source-maps inline",
    "build:ts": "tsc -p ./src --outDir ./dist",
    "gen-docs": "typedoc --readme README.md --excludeNotExported --ignoreCompilerErrors --exclude '{**/*spec*,**/node_modules/**,**/spec/**}' --out doc ./src"
  }
}
